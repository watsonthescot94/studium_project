<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/navbar.css">
    <link rel="stylesheet" href="/style/video_lectures.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/scripts/alert.js" type="text/javascript"></script>
    <script src="/scripts/get_length_of_time.js" type="text/javascript"></script>
    <script src="/scripts/video_control.js" type="text/javascript"></script>
    <title>Video Lecture | Studium</title>
</head>
<body>
    <!-- Chat messages appear automatically at their given timecode -->
    <!-- Capture timecode when user plays video -->
    <div id="pop_up_background">
        <div id="add_new_comment_container">
            <p id="add_new_comment_title"></p>
            <input id="add_new_comment_input" type="text" autocomplete="off"></input><br><br>
            <div id="add_new_comment_error_message"></div>
            <button id="add_new_comment_submit_button">SUBMIT</button>
            <button id="add_new_comment_cancel_button">CANCEL</button>
        </div>

        <div id="add_new_reply_container">
            <p>REPLYING TO:</p>
            <div id="add_new_reply_recipient_container" class="message_wrapper"></div>
            <input id="add_new_reply_input" placeholder="Write your reply..." autocomplete="off"></input><br><br>
            <div id="add_new_reply_error_message"></div>
            <button id="add_new_reply_submit_button">SUBMIT</button>
            <button id="add_new_reply_cancel_button">CANCEL</button>
        </div>
    </div>

    <%- include ("./navbar.ejs", { user }) %>

    <div id="main">
        <button id="add_notification_button">ADD NOTIFICATION</button>
        <p id="course_page_link"><a href="">&lt; Course Page</a></p>
        <div id="video_chatbox_container">
            <div id="video_container">
                <video id="video_lecture" controls style="background-color: black">
                    <source src="/videos/mary berry.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>

                <div id="receive_question_notifications_checkbox_container"></div>
                <h1 id="video_title"></h1>
                <p id="video_description"></p>
            </div>
            <div id="chatbox_container">

                <div id="tabs_container">
                    <div id="questions_tab_container">
                        <div id="questions_tab" class="tab active_tab"><p id="questions_tab_text" class="unselectable"><b>Questions</b></p></div>
                    </div>
                    <div id="feedback_tab_container">
                        <div id="feedback_tab" class="tab"><p id="feedback_tab_text" class="unselectable"><b>Feedback</b></p></div>
                    </div>
                </div>

                <div id="chatbox_messages"></div>

                <input id="add_new_comment_button" type="button" value="Ask a Question">
            </div>
        </div>

        <div id="alert_message_container">
            <p id="alert_message" class="unselectable">Comment posted</p>
        </div>
    </div>

    <form style="display: none" action="/message_page" method="POST" id="error_redirect_form">
        <input type="hidden" id="error_message" name="error_message" value=""/>
        <input type="hidden" id="error_title" name="error_title" value=""/>
      </form>
</body>
</html>