<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style/navbar.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/scripts/notifications.js" type="application/javascript"></script>
</head>
<body>
    <div class="navbar">
        <a href="/" class="left_link">Home</a>
        <a href="/all-courses" class="left_link">All Courses</a>
        <div class="dropdown left_link">
          <button class="dropbtn">My Courses
          </button>
          <div class="dropdown-content">
            <a href="/my-courses/teaching">Courses I'm Teaching</a>
            <a href="/my-courses/enrolled-in">Courses I'm Enrolled In</a>
            <a href="/my-courses/moderating">Courses I'm Moderating</a>
          </div>
        </div>
        <a href="/my-templates" class="left_link">My Templates</a>
        <% if (typeof user !== 'undefined') { %>
          <a href="/notifications" class="right_link">Notifications <span id="notification_count">(?)</span></a>
          <a href="/logout" class="right_link">Log Out</a>
          <a href="/user/<%=user._id%>" class="right_link">My Profile</a>
        <% } else { %>
          <a href="/register" class="right_link">Register</a>
          <a href="/login" class="right_link">Login</a>
        <% } %>
      </div>
</body>
</html>